---
const { post } = Astro.props;

function formatDate(date: string) {
  return new Date(date).toLocaleDateString("en-GB", {
    year: "numeric",
    month: "short",
    day: "numeric",
  });
}
---

<div>{formatDate(post.data.publishDate)}</div>
<div><a href={`posts/${post.slug}`}>{post.data.title}</a></div>

<style>
    li {
        style: none;
    }
</style>
