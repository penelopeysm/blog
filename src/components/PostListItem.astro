---
const { post } = Astro.props;

function formatDate(date) {
  return new Date(date).toLocaleDateString("en-GB", {
    year: "numeric",
    month: "short",
    day: "numeric",
  });
}
---

{formatDate(post.data.publishDate)}
<a href={`posts/${post.slug}`}>{post.data.title}</a>

<style>
    li {
        style: none;
    }
</style>
